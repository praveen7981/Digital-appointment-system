<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/page_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_doctor">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="620dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/border_radius"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="150dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:text="Sign Up"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dfname"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="First Name"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dlname"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="Last Name"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dusename"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="Username"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dpassword"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="Password"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dcpassword"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="Confirm Password"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:id="@+id/dphone"
            android:textSize="18dp"
            android:textColorHint="@color/blaack"
            android:background="@drawable/image_radius"
            android:hint="Phone number"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:background="@drawable/submit_button"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:onClick="docregister"
            />

    </LinearLayout>


</LinearLayout>